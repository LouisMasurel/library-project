<h2>Edit a book</h2>

<!-- STEP #4 of EDIT form (browser sends request) -->
<form action="/process-edit/{{bookId}}" method="POST">
  <input type="text" name="title" value="{{book.title}}" placeholder="Title..." />
  <br />
  <input type="text" name="author" value="{{book.author}}" placeholder="Author..." />
  <br />
  <input type="text" name="description" value="{{book.description}}" placeholder="Description..." />
  <br />
  <input type="number" name="rating" value="{{book.rating}}" placeholder="Rating (1-10)" />
  <br />

  <button>Update This Book</button>
</form>
